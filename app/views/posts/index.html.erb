<div class="container">	
	<div class="row">
		<% @posts.each do |post| %>
						<%= image_tag post.image.url(:thumb) %>
					<h2><div class="container">
						<%= link_to post.title, post %>
					</div></h2>
					<p><div class="container">
						<h3>published at <%= time_ago_in_words(post.created_at) %> by <%= post.user.email %></h3>
					</div></p>
		<% end %>
	</div>
</div>

	
