<div class="container">
	<div id="image">
		<%= image_tag @post.image.url(:large) %>
	</div>

	<div id="post_content">	

		<h1><%= @post.title %></h1>
		<p><%= @post.content %></p>
	</div>

	<div id="comments">
		<h2>Number of comments: 	<%= @post.comments.count %>
		<%= render @post.comments %></h2>
		
		<h3> Reply to thread <%= render "comments/form" %> </h3>
		
	</div>
</div>

		

<%= link_to "EDIT", edit_post_path(@post) %>
<%= link_to "DELETE", post_path(@post), method: :delete, data: {confirm: "Are you sure want to delete"} %>
<%= link_to "HOME", root_path %> 
	


	
		
	
  